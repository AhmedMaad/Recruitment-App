<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maad.recruitment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Recruitment">
        <activity
            android:name=".jobseeker.CompanyDetailsActivity"
            android:exported="false"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name=".jobseeker.SeekerProfileActivity"
            android:exported="false" />
        <activity
            android:name=".recruiter.AvailableEmployeesActivity"
            android:exported="false" />
        <activity
            android:name=".company.job.JobActivity"
            android:exported="false" />
        <activity
            android:name=".company.employee.EmployeeActivity"
            android:exported="false" />
        <activity
            android:name=".company.department.DepartmentActivity"
            android:exported="false" />
        <activity
            android:name=".company.CompanyProfileActivity"
            android:exported="false" />
        <activity
            android:name=".register.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Design.Light" />
        <activity
            android:name=".jobseeker.AvailableCompaniesActivity"
            android:exported="false" />
        <activity
            android:name=".register.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".register.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>