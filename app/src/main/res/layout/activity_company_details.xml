<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".jobseeker.CompanyDetailsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/company_profile_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/company_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/rakkas"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/company_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/company_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/company_location_tv"
            android:textSize="18sp"
            android:layout_gravity="center"
            tools:text="@tools:sample/full_names"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_location" />

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="About:"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/company_about_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rakkas"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="@tools:sample/full_names" />

















        <!--
        Recycler View (Departments)
        val deptname: String = "",
    val deptdescription: String = "",
    val deptvision: String = "",
    val deptmission: String = "",
    val deptemployeesNumber: Int = 0,
        -->

        <!--
    Recycler View (Jobs)
    val title: String = "",
    val description: String = "",
    val benefits: String = "",
    val salary: String = "",
    val isNegotiable: Boolean = false,
-->

        <!--
         Recycler View (Employees)
         val employeeimage: String = "",
    val empname: String = "",
    val emprole: String = "",
    val funQuote: String = "",
        -->



    </LinearLayout>

</ScrollView>